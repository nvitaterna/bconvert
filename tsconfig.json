{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "typedocOptions": {
    "mode": "modules",
    "out": "docs",
    "exclude": [
      "**/*.spec.ts",
      "**/index.ts",
      "src/builtins/index.ts",
      "src/utils/index.ts"
    ],
    "excludePrivate": true,
    "readme": "none",
    "includeVersion": "true",
    "gitRevision": "master"
  }
}
