{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "dist",
    "rootDirs": ["src", "test-utils"],
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true
  },
  "exclude": ["node_modules", "dist"],
  "typedocOptions": {
    "mode": "modules",
    "out": "docs",
    "exclude": [
      "**/index.ts",
      "src/builtins/index.ts",
      "src/utils/index.ts",
      "**/*.test.ts"
    ],
    "excludePrivate": true,
    "readme": "none",
    "includeVersion": "true",
    "gitRevision": "master"
  }
}
